<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

    <path>../../Models/Primus-Epic/primus_epic_eicas.ac</path>

    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/eicas</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>touch</type>
        <object-name>EICAS</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var eicas = canvas_eicas.eicas;
                    if (eicas != nil) {
                        eicas.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>

    <!-- ALS -->
    <animation>
        <type>material</type>
        <object-name>EICAS</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>/controls/lighting/eicas</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>EICAS_frame</object-name>
        <decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var eicas = canvas_eicas.eicas;
                    if (eicas != nil) {
                        eicas.scroll(-1, 0);
                    }
                ]]></script>
            </binding>
        </decrease>
        <increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var eicas = canvas_eicas.eicas;
                    if (eicas != nil) {
                        eicas.scroll(1, 0);
                    }
                ]]></script>
            </binding>
        </increase>
        <shift-decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var eicas = canvas_eicas.eicas;
                    if (eicas != nil) {
                        eicas.scroll(-1, 1);
                    }
                ]]></script>
            </binding>
        </shift-decrease>
        <shift-increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var eicas = canvas_eicas.eicas;
                    if (eicas != nil) {
                        eicas.scroll(1, 1);
                    }
                ]]></script>
            </binding>
        </shift-increase>
    </animation>
</PropertyList>
