<PropertyList>
    <path>../../Models/Instruments/Chrono/chronometer.ac</path>

    <!-- ALS -->
    <animation>
        <type>material</type>
        <object-name>chrono_screen</object-name>
        <emission>
            <red>0.5</red>
            <green>0.9</green>
            <blue>1.0</blue>
            <factor-prop>/controls/lighting/standby-clock</factor-prop>
        </emission>
        <ambient>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
        </ambient>
        <diffuse>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
        </diffuse>
    </animation>

        
    <animation>
        <type>pick</type>
        <object-name>chrono_screen</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>canvas_chrono.showChrono();</script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>et</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/elapsed_time/reset</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/elapsed_time/reset</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>chr</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/chrono/start</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/chrono/start</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>rst</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/chrono/reset</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/chrono/reset</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
</PropertyList>
