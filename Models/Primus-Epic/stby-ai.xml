<PropertyList>
    <path>../../Models/Primus-Epic/stby-ai.ac</path>

    <animation>
        <type>pick</type>
        <object-name>IESS_screen</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>canvas_iess.showIESS();</script>
            </binding>
        </action>
    </animation>

    <!--Set Altimeter-->
    <animation>
        <type>knob</type>
        <object-name>baroknob</object-name>        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter[2]/setting-hpa</property>
                <factor>1</factor>
                <min>950</min>
                <max>1050</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hpa</tooltip-id>
                <label>QNH: %u hPa</label>
                <mapping>QNH</mapping>
                <property>instrumentation/altimeter[2]/setting-hpa</property>
            </binding>
        </hovered>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>std</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/altimeter[2]/setting-hpa</property>
                <value>1013</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ILS</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/IESS/ILS-ind</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>brightness_plus</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/IESS/brightness</property>
                <step>0.1</step>
                <min>0.1</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>brightness_minus</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/IESS/brightness</property>
                <step>-0.1</step>
                <min>0.1</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <!-- ALS -->
    <animation>
        <type>material</type>
        <object-name>IESS_screen</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>/instrumentation/IESS/brightness</factor-prop>
        </emission>
        <ambient>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
        </ambient>
        <diffuse>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
        </diffuse>
    </animation>


</PropertyList>
