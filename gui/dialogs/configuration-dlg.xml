<?xml version="1.0"?>
<PropertyList>
    <name>configuration</name>
    <layout>vbox</layout>
    <!-- <pref-width>800</pref-width> -->
    
    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <text>
            <label>E-Jet Family Configuration</label>
        </text>
        
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <button>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <legend></legend>
            <keynum>27</keynum>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>Controls</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>hbox</layout>
        <halign>left</halign>
        <valign>top</valign>
        <checkbox>
            <label>Keyboard Mode (Num Pad = flight controls)</label>
            <property>/options/system/keyboard-mode</property>
            <halign>left</halign>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
    </group>
    <group>
        <layout>hbox</layout>
        <halign>left</halign>
        <valign>top</valign>
        <checkbox>
            <label>CCD emulation (mouse click/scroll on EFIS screens = cursor control device)</label>
            <property>/options/controls/ccd-emulation</property>
            <halign>left</halign>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
    </group>
    <group>
        <layout>hbox</layout>
        <checkbox>
            <label>Separate tiller steering</label>
            <property>controls/gear/enable-tiller</property>
            <halign>left</halign>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live type="bool">true</live>
        </checkbox>
        <checkbox>
            <label>Realistic nosewheel steering</label>
            <property>options/controls/realistic-nose-wheel-steering</property>
            <halign>left</halign>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live type="bool">true</live>
        </checkbox>
    </group>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>Systems</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>hbox</layout>
        <text>
            <label>IRU alignment speed</label>
        </text>
        <combo>
            <property>options/instrumentation/iru-alignment-mode</property>
            <value>normal</value>
            <value>fast</value>
            <value>instant</value>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live type="bool">true</live>
        </combo>
        <checkbox>
            <label>Auto-align IRU</label>
            <property>options/instrumentation/iru-auto-align</property>
            <binding>
                <command>property-toggle</command>
                <property>options/instrumentation/iru-auto-align</property>
            </binding>
            <halign>left</halign>
            <live type="bool">true</live>
        </checkbox>
        <button>
            <legend>Align now</legend>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    for (var i = 0; i < 2; i += 1) {
                        if (iru.irus[i].props.latitudeReferenceDeg.getValue() == nil or
                            iru.irus[i].props.longitudeReferenceDeg.getValue() == nil) {
                            setprop('/fms/navigation/position-selected', 2);
                        }
                        iru.irus[i].finishAlignment();
                    }
                ]]></script>
            </binding>
        </button>
    </group>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>PFD Coupling</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>
    <group>
        <layout>hbox</layout>

        <combo>
            <pref-width>300</pref-width>
            <property>options/instrumentation/pfd-coupling</property>
            <value>independent</value>
            <value>2 follows 1 (Captain is Pilot Flying)</value>
            <value>1 follows 2 (FO is Pilot Flying)</value>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live type="bool">true</live>
        </combo>
    </group>

    <hrule/>
    
    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>Electronic Flight Bag (EFB)</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>vbox</layout>
        <halign>left</halign>
        
        <group>
            <layout>hbox</layout>
            <halign>left</halign>
            <valign>top</valign>
            <group>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/efb/available</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
        </group>
        <group>
            <layout>hbox</layout>
            <halign>left</halign>
            <valign>top</valign>
            <group>
                <layout>hbox</layout>
                <checkbox>
                    <label>Grab Keyboard</label>
                    <property>/instrumentation/efb/allow-keyboard-grabbing</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
        </group>
        <group>
            <layout>hbox</layout>
            <halign>left</halign>
            <valign>top</valign>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Companion URL</label>
                </text>
                <input>
                    <property>/instrumentation/efb/flightbag-companion-uri</property>
                    <pref-width>200</pref-width>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
                <button>
                    <legend>Reset</legend>
                    <binding>
                        <command>property-assign</command>
                        <property>/instrumentation/efb/flightbag-companion-uri</property>
                        <value>http://localhost:7675/</value>
                    </binding>
                    <binding>
                        <command>dialog-update</command>
                    </binding>
                </button>
            </group>
        </group>
    </group>

    <hrule/>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>EFIS</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>vbox</layout>
        <halign>left</halign>
        
        <group>
            <layout>table</layout>
            <halign>left</halign>
            <valign>top</valign>
            <text>
                <row>0</row>
                <col>0</col>
                <label>PFD1</label>
                <pref-width>70</pref-width>
            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>MFD1</label>
                <pref-width>70</pref-width>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <label>EICAS</label>
                <pref-width>70</pref-width>
            </text>
            <text>
                <row>0</row>
                <col>3</col>
                <label>MFD2</label>
                <pref-width>70</pref-width>
            </text>
            <text>
                <row>0</row>
                <col>4</col>
                <label>PFD2</label>
                <pref-width>70</pref-width>
            </text>

            <group>
                <row>1</row>
                <col>0</col>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/pfd[0]/enabled</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
            <group>
                <row>1</row>
                <col>1</col>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/mfd[0]/enabled</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
            <group>
                <row>1</row>
                <col>2</col>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/eicas/enabled</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
            <group>
                <row>1</row>
                <col>3</col>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/mfd[1]/enabled</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
            <group>
                <row>1</row>
                <col>4</col>
                <layout>hbox</layout>
                <checkbox>
                    <label>Enabled</label>
                    <property>/instrumentation/pfd[1]/enabled</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
        </group>
    </group>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>MFD Terrain Quality</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>hbox</layout>
        
        <empty><stretch>1</stretch></empty>
        <text>
            <label>Higher values = better quality, lower values = better performance</label>
        </text>
        <empty><stretch>1</stretch></empty>
    </group>

    <group>
        <layout>vbox</layout>
        <halign>left</halign>
        
        <group>
            <layout>table</layout>
            <halign>left</halign>
            <valign>top</valign>
            <text>
                <row>0</row>
                <col>1</col>
                <label>MFD1</label>
                <pref-width>100</pref-width>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <label>MFD2</label>
                <pref-width>100</pref-width>
            </text>
            <text>
                <row>2</row>
                <col>0</col>
                <label>Resolution</label>
                <pref-width>100</pref-width>
            </text>
            <group>
                <layout>hbox</layout>
                <row>2</row>
                <col>1</col>
                <slider>
                    <property>/instrumentation/mfd[0]/resolution</property>
                    <pref-width>100</pref-width>
                    <min>3</min>
                    <max>7</max>
                    <step>1</step>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </slider>
                <text>
                    <pref-width>20</pref-width>
                    <label>1</label>
                    <property>/instrumentation/mfd[0]/resolution</property>
                    <live>true</live>
                </text>
            </group>
            <group>
                <layout>hbox</layout>
                <row>2</row>
                <col>2</col>
                <slider>
                    <property>/instrumentation/mfd[1]/resolution</property>
                    <pref-width>100</pref-width>
                    <min>3</min>
                    <max>7</max>
                    <step>1</step>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </slider>
                <text>
                    <pref-width>20</pref-width>
                    <label>1</label>
                    <property>/instrumentation/mfd[1]/resolution</property>
                    <live>true</live>
                </text>
            </group>

            <text>
                <row>3</row>
                <col>0</col>
                <label>Scan Speed</label>
                <pref-width>100</pref-width>
            </text>
            <group>
                <layout>hbox</layout>
                <row>3</row>
                <col>1</col>
                <slider>
                    <property>/instrumentation/mfd[0]/scan-rate</property>
                    <pref-width>100</pref-width>
                    <min>1</min>
                    <max>8</max>
                    <step>1</step>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </slider>
                <text>
                    <pref-width>20</pref-width>
                    <label>1</label>
                    <property>/instrumentation/mfd[0]/scan-rate</property>
                    <live>true</live>
                </text>
            </group>
            <group>
                <layout>hbox</layout>
                <row>3</row>
                <col>2</col>
                <slider>
                    <property>/instrumentation/mfd[1]/scan-rate</property>
                    <pref-width>100</pref-width>
                    <min>1</min>
                    <max>8</max>
                    <step>1</step>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </slider>
                <text>
                    <pref-width>20</pref-width>
                    <label>1</label>
                    <property>/instrumentation/mfd[1]/scan-rate</property>
                    <live>true</live>
                </text>
            </group>
        </group>
    </group>
    
</PropertyList>


